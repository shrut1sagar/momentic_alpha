# Finnhub API token (do NOT commit your real key)
FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage API token (optional; do NOT commit your real key)
# WARNING: Free tier has STRICT limits (25 calls/day, 5 calls/min)
# Get a free key at: https://www.alphavantage.co/support/#api-key
# ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# YFinance (Yahoo Finance) settings (keyless; uses public endpoints via yfinance)
# No API key required
# Optional overrides:
# YFINANCE_INTERVAL=1d
# YFINANCE_AUTO_ADJUST=False
# YFINANCE_BACK_ADJUST=False
# YFINANCE_PREPOST=False

# Massive API token (optional; do NOT commit your real key)
# MASSIVE_API_KEY=your_massive_api_key_here

# Optional: default data provider selection (e.g., finnhub, massive, alphavantage)
# DATA_SOURCE_NAME=finnhub

# Optional Finnhub settings (defaults shown)
# FINNHUB_BASE_URL=https://finnhub.io/api/v1
# FINNHUB_MIN_SLEEP_SECONDS=0.2
# FINNHUB_TIMEOUT_SECONDS=30

# Optional Massive settings (defaults shown)
# MASSIVE_BASE_URL=https://api.massive.com
# MASSIVE_TIMEOUT_SECONDS=30

# Optional Alpha Vantage settings (defaults shown)
# ALPHAVANTAGE_BASE_URL=https://www.alphavantage.co/query
# ALPHAVANTAGE_FUNCTION=TIME_SERIES_DAILY
# ALPHAVANTAGE_OUTPUTSIZE=full
